{
  "expo": {
    "name": "Dashboard",
    "slug": "Dashboard",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/LogoDashboard.png",
    "splash": {
      "image": "./assets/dashboard-2.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Expo experiences to use your camera",
        "NSLocationWhenInUseUsageDescription": "Allow Expo experiences to use your location when in app", 
        "NSLocationAlwaysUsageDescription": "Allow Expo experiences to use your location all the time",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Expo experiences to use your location both in app and all the time",
        "NSPhotoLibraryUsageDescription": "Give Expo experiences permission to access your photos",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      },
      "bundleIdentifier": "com.quangnguyen140102app.dashboard",
      "buildNumber": "1.7.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/LogoDashboard.png",
        "backgroundColor": "#FFFFFF"
      },
      "versionCode": 3,
      "permissions": [
        "CAMERA",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "package": "com.quangnguyen140102app.dashboard"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
